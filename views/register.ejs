
<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fa fa-spinner fa-spin fa-1x fa-fw"></i> Registration
      </h1>
      <% include ./partials/messages %>

      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="typesOfUser">which type of user? (student/Teacher)</label>
          <input
            type="typesOfUser"
            id="typesOfUser"
            name="typesOfUser"
            class="form-control"
            placeholder="Enter User Type"
            value="<%= typeof typesOfUser != 'undefined' ? typesOfUser : '' %>"
          />
        <div class="form-group">
          <label for="ID">Enter your University ID</label>
          <input
            type="ID"
            id="ID"
            name="ID"
            class="form-control"
            placeholder="Enter ID"
            value="<%= typeof ID != 'undefined' ? ID : '' %>"
          />
        <div class="form-group">
          <label for="email">Enter your University Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Create Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Signup for Thesis Archiver
        </button>
      </form>
      <p class="lead mt-1">Have An Account? <a href="/users/login">Login</a></p>
    </div>
  </div>
</div>